---
interface Props {
  title: string;
}

const { title = "Mooney Moon" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Money Moon is a personal financial tracking app."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>

  <style is:global>
    @font-face {
      font-family: "Outfit-Bold";
      font-display: swap;
      src: url("/fonts/Outfit-Bold.ttf") format("truetype");
    }

    @font-face {
      font-family: "Outfit-Light";
      font-display: swap;
      src: url("/fonts/Outfit-Light.ttf") format("truetype");
    }

    html {
      background: #e9efff;
    }
  </style>
</html>
